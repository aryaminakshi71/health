{
  "name": "@healthcare-saas/api",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./app": {
      "types": "./dist/app.d.ts",
      "import": "./src/app.ts",
      "default": "./src/app.ts"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "echo 'API is now integrated into web app. Use: bun run dev in root to start web+api together'",
    "dev:standalone": "bun run src/index.ts",
    "build": "tsc",
    "start": "bun run dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@healthcare-saas/core": "workspace:*",
    "@healthcare-saas/env": "workspace:*",
    "@healthcare-saas/storage": "workspace:*",
    "@healthcare-saas/graphql": "workspace:*",
    "@neondatabase/serverless": "^0.9.0",
    "@orpc/openapi": "^1.13.4",
    "@orpc/server": "^1.13.4",
    "@orpc/zod": "^1.13.4",
    "@scalar/hono-api-reference": "^0.9.40",
    "@sentry/node": "^8.0.0",
    "@tanstack/start": "^1.0.0",
    "@upstash/ratelimit": "^2.0.7",
    "better-auth": "^1.4.12",
    "dd-trace": "^5.0.0",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.7.10",
    "postgres": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@types/bun": "latest",
    "@types/node": "^22.19.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
