# Healthcare SaaS Production Environment Configuration
# Copy this file to .env.production and fill in the values

# =============================================================================
# DATABASE (Required)
# =============================================================================
DATABASE_URL=postgresql://user:password@hostname:5432/healthcare_db?sslmode=require

# =============================================================================
# AUTHENTICATION
# =============================================================================
BETTER_AUTH_SECRET=your-production-secret-key-min-32-chars
BETTER_AUTH_URL=https://yourdomain.com

# =============================================================================
# REDIS CACHING (Upstash for Cloudflare Workers)
# =============================================================================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================================================
# SENTRY MONITORING
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# =============================================================================
# EMAIL PROVIDER (Resend)
# =============================================================================
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# SMS PROVIDER (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# SMS PROVIDER ALTERNATIVE (Vonage)
# =============================================================================
VONAGE_API_KEY=your-api-key
VONAGE_API_SECRET=your-api-secret
VONAGE_BRAND_NAME=YourBrand

# =============================================================================
# STripe PAYMENTS
# =============================================================================
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# =============================================================================
# VAPID KEYS (Push Notifications)
# =============================================================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# ENCRYPTION KEYS
# =============================================================================
# IMPORTANT: Store these securely, never commit to version control
ENCRYPTION_KEY=your-32-byte-encryption-key
MFA_ENCRYPTION_KEY=your-mfa-encryption-key

# =============================================================================
# FHIR SERVER (if using external FHIR server)
# =============================================================================
FHIR_SERVER_URL=https://your-fhir-server.com/fhir
FHIR_SERVER_TOKEN=your-fhir-token

# =============================================================================
# CLOUD STORAGE (R2/S3 compatible)
# =============================================================================
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=healthcare-files

# =============================================================================
# ANALYTICS
# =============================================================================
POSTHOG_API_KEY=phc_xxxxxxxxxxxxx

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000
APP_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=https://yourdomain.com
