{
  "name": "healthcare-saas",
  "version": "1.0.0",
  "description": "Comprehensive healthcare management system for hospitals and clinics with multi-region compliance",
  "type": "module",
  "scripts": {
    "dev": "bun run dev:api & bun run dev:web",
    "dev:api": "cd apps/api && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "build": "bun run build:api && bun run build:web",
    "build:api": "cd apps/api && bun run build",
    "build:web": "cd apps/web && bun run build",
    "start": "bun run start:api & bun run start:web",
    "start:api": "cd apps/api && bun run start",
    "start:web": "cd apps/web && bun run start",
    "db:generate": "cd packages/storage && bun run db:generate",
    "db:push": "cd packages/storage && bun run db:push",
    "db:migrate": "cd packages/storage && bun run db:migrate",
    "db:studio": "cd packages/storage && bun run db:studio",
    "typecheck": "bun run typecheck:api && bun run typecheck:web",
    "typecheck:api": "cd apps/api && bun run typecheck",
    "typecheck:web": "cd apps/web && bun run typecheck",
    "lint": "bun run lint:api && bun run lint:web",
    "lint:api": "cd apps/api && bun run lint",
    "lint:web": "cd apps/web && bun run lint",
    "test": "bun test --pass-with-no-tests packages",
    "test:api": "cd apps/api && bun run test",
    "test:coverage": "cd apps/api && bun run test:coverage",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@orpc/server": "^1.11.2",
    "@orpc/client": "^1.13.4",
    "@orpc/tanstack-query": "^1.13.4",
    "@orpc/zod": "^1.11.2",
    "@orpc/openapi": "^1.11.2",
    "@tanstack/start": "^1.0.0",
    "@tanstack/react-query": "^5.0.0",
    "better-auth": "^1.0.0",
    "drizzle-orm": "^0.45.0",
    "postgres": "^3.4.0",
    "zod": "^4.1.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "healthcare",
    "ehr",
    "hospital-management",
    "hipaa",
    "gdpr",
    "compliance",
    "tanstack-start",
    "orpc",
    "drizzle",
    "postgres"
  ],
  "author": "",
  "license": "MIT"
}